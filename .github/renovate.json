{
  "extends": ["config:base"],
  "masterIssue": true,
  "automerge": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packagePatterns": ["react", "react-dom", "react-scripts"],
      "groupName": "react"
    },
    {
      "packagePatterns": ["^@types/"],
      "groupName": "ts-types"
    }
  ]
}
