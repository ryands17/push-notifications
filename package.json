{
  "name": "firebase-push",
  "version": "2.0.0",
  "description": "A simple implementation of FCM Push notifications",
  "private": true,
  "dependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@types/react": "18.0.1",
    "@types/react-dom": "18.0.0",
    "firebase": "8.10.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-scripts": "5.0.0",
    "typescript": "4.6.3"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "cross-env NODE_ENV=production node codemods/firebase-sw.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "npx serve -s build",
    "postinstall": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@types/prettier": "2.6.0",
    "cross-env": "7.0.3",
    "husky": "7.0.4",
    "jscodeshift": "0.13.1",
    "lint-staged": "12.3.8",
    "prettier": "2.6.2",
    "typesync": "0.9.0"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
}
