{
  "name": "firebase-push",
  "version": "2.0.0",
  "description": "A simple implementation of FCM Push notifications",
  "private": true,
  "dependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.28",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "firebase": "8.2.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.2",
    "typescript": "4.1.5"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "cross-env NODE_ENV=production node codemods/firebase-sw.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "npx serve -s build",
    "postinstall": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@types/prettier": "2.2.1",
    "cross-env": "7.0.3",
    "husky": "5",
    "jscodeshift": "0.11.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "typesync": "0.8.0"
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
