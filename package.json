{
  "name": "firebase-push",
  "version": "2.0.0",
  "description": "A simple implementation of FCM Push notifications",
  "private": true,
  "dependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.22",
    "@types/react": "16.9.52",
    "@types/react-dom": "16.9.8",
    "firebase": "7.23.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "4.1.3"
  },
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "cross-env NODE_ENV=production node codemods/firebase-sw.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "npx serve -s build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.75%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@types/prettier": "2.1.6",
    "cross-env": "7.0.3",
    "husky": "4.3.8",
    "jscodeshift": "0.11.0",
    "lint-staged": "10.5.3",
    "prettier": "2.1.2",
    "typesync": "0.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
